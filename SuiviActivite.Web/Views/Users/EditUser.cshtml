@model SuiviActivite.Web.Models.Users.EditUser.EditUser

@{
    ViewBag.Title = "Modifier un utilisateur";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SaveUser", "Users", FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>EditUser</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>

        <p>
            @Html.HiddenFor(m => m.Id)
            <input type="submit" value="Sauvegarder" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retour au tableau de bord des utilisateurs", "ManageUsers", "Users")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
